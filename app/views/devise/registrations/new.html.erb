<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :name, value: 'Temp' %>
  <%= f.hidden_field :email, value: 'temp@justcamehome.info' %>

  <div><%= f.label :system %><br />
  <%= f.select :system, options_for_select(['Federal', 'California', 'Michigan']) %></div>

  <div><%= f.label :inmate_number %><br />
  <%= f.number_field :inmate_number %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
